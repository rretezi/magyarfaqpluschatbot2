{
  "$schema": "https://developer.microsoft.com/en-us/json-schemas/teams/v1.5/MicrosoftTeams.Localization.schema.json",
  "manifestVersion": "1.7",
  "version": "1.0.0",
  "id": "<<BotID>>",
  "packageName": "com.microsoft.teams.faqplus",
  "localizationInfo": {
	  "defaultLanguageTag": "en",
	  "additionalLanguages": [
	  {
		  "languageTag": "hu",
		  "file": "hu.json"
	  }
	  ]
  },
  "developer": {
    "name": "Microsoft",
    "websiteUrl": "https://microsoft.com",
    "privacyUrl": "https://privacy.microsoft.com/en-US/",
    "termsOfUseUrl": "https://www.microsoft.com/en-us/legal/intellectualproperty/copyright"
  },
  "icons": {
    "color": "color.png",
    "outline": "outline.png"
  },
  "name": {
    "short": "Magyar FAQ teams Bot"
  },
  "description": {
    "short": "Egy barátságos chatbot mely kérdésekre válaszol és összeköt szakértőkkel.",
    "full": "Egy barátságos chatbot, amely megválaszolja a gyakori kérdéseket. Ha nem tud válaszolni, összeköt egy szakértővel, amint elérhető lesz."
  },
  "accentColor": "#64A2CC",
  "bots": [
    {
      "botId": "<<BotID>>",
      "scopes": [
        "personal",
        "team"
      ],
      "commandLists": [
        {
          "scopes": [
            "personal"
          ],
          "commands": [
            {
              "title": "Körbejárás",
              "description": "Fő funkciók megismerése"
            },
            {
              "title": "Kérdezz egy szakértőt",
              "description": "Lépj kapcsolatba egy szakértővel"
            },
            {
              "title": "Visszajelzés megosztása",
              "description": "Küldj visszajelzést"
            }
          ]
        }
      ],
      "supportsFiles": false,
      "isNotificationOnly": false
    }
  ],
  "staticTabs": [
    {
      "entityId": "help",
      "name": "Help",
      "contentUrl": "https://<<AppDomain>>/help?theme={theme}",
      "scopes": [
        "personal"
      ]
    }
  ],
  "permissions": [
    "identity",
    "messageTeamMembers"
  ],
  "validDomains": [
    "<<AppDomain>>"
  ]
}